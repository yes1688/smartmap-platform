# ======================================
# Intelligent Spatial Platform
# Environment Configuration Template
# ======================================
#
# Copy this file to .env and fill in your values
# Usage:
#   Development: Use values marked with [DEV]
#   Production:  Use values marked with [PROD]
#
# ======================================

# ======================================
# Environment Selection
# ======================================
BUILD_ENV=development  # Options: development | production
GIN_MODE=debug         # Options: debug | release

# ======================================
# Database Configuration
# ======================================
DB_HOST=localhost      # [DEV: localhost] [PROD: postgres]
DB_PORT=5433           # [DEV: 5433] [PROD: 5432]
DB_NAME=spatial_platform_dev
DB_USER=spatial_user
DB_PASSWORD=spatial_dev_password  # ⚠️ CHANGE IN PRODUCTION

# ======================================
# Application Ports
# ======================================
APP_PORT=8081                    # Backend API port
NGINX_PORT=7003                  # Nginx proxy port
FRONTEND_DEV_PORT=3002           # Frontend dev server (avoids conflict with Speech Ear API:3001)

# ======================================
# AI Provider Configuration
# ======================================
# Select AI provider: "ollama" (local) or "openrouter" (cloud)
AI_PROVIDER=openrouter  # Options: ollama | openrouter

# --- Ollama Configuration (Local AI) ---
OLLAMA_PORT=11434
OLLAMA_MODEL=phi4-mini-max:latest  # [DEV: phi4-mini-max:latest] [PROD: llama2:13b]
OLLAMA_URL=http://localhost:11434

# --- OpenRouter Configuration (Cloud AI) ---
OPENROUTER_API_KEY=YOUR_OPENROUTER_API_KEY_HERE  # Get from: https://openrouter.ai/keys
OPENROUTER_MODEL=google/gemma-2-27b-it:free      # Options: see https://openrouter.ai/docs#models
OPENROUTER_URL=https://openrouter.ai/api/v1/chat/completions

# --- AI Rate Limiting ---
AI_RATE_LIMIT_RPM=1     # Requests per minute (OpenRouter free tier: 1 RPM)
AI_RATE_LIMIT_WINDOW=60 # Window in seconds

# --- AI Behavior ---
AI_MAX_TOKENS=2048  # [DEV: 2048] [PROD: 1024]
AI_TEMPERATURE=0.7  # [DEV: 0.7] [PROD: 0.5] Range: 0.0-1.0

# ======================================
# Google Services
# ======================================
# Google Places API for location search
# Get key from: https://console.cloud.google.com/
# Enable: Places API (Text Search)
GOOGLE_PLACES_API_KEY=YOUR_GOOGLE_PLACES_API_KEY_HERE

# CesiumJS 3D Globe Token (if using Cesium)
# Get token from: https://ion.cesium.com/
CESIUM_ACCESS_TOKEN=YOUR_CESIUM_ACCESS_TOKEN_HERE

# ======================================
# Voice Configuration
# ======================================
VOICE_ENABLED=true
VOICE_LANGUAGE=zh-TW  # Options: zh-TW | en-US | ja-JP

# ======================================
# Game System Configuration
# ======================================
GAME_ITEM_SPAWN_INTERVAL=30s  # [DEV: 30s] [PROD: 60s]
GAME_MAX_ITEMS=10             # [DEV: 10] [PROD: 20]
GAME_COLLECTION_RADIUS=50     # [DEV: 50m] [PROD: 30m]

# ======================================
# Security Configuration
# ======================================
JWT_SECRET=your_jwt_secret_key_here  # ⚠️ GENERATE SECURE SECRET FOR PRODUCTION
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000  # [PROD: https://yourdomain.com]

# ======================================
# Logging Configuration
# ======================================
LOG_LEVEL=debug  # Options: debug | info | warn | error
LOG_FORMAT=text  # Options: text | json

# ======================================
# Performance Tuning (Production)
# ======================================
MAX_CONNECTIONS=100   # Maximum database connections
READ_TIMEOUT=30s      # HTTP read timeout
WRITE_TIMEOUT=30s     # HTTP write timeout

# ======================================
# Build Information
# ======================================
VERSION=1.0.0